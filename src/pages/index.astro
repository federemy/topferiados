    }

    function setButtonLoading(on) {
      if (!els.load) return;
      if (on) {
        els._loadText = els._loadText || els.load.textContent;
        els.load.disabled = true;
        els.load.setAttribute("aria-busy", "true");
        els.load.innerHTML = `
          <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
          Cargando...
        `;
      } else {
        els.load.disabled = false;
        els.load.removeAttribute("aria-busy");
        els.load.textContent = els._loadText || "âœ¨ Ver feriados";
      }
    }

    async function handleLoad() {
      const { code, year } = getSelection();
      state.selected = { code, year };
      els.titleCountry.textContent = codeToName(code);
      els.titleYear.textContent = year;

      // ğŸ”› ON por secciÃ³n
      setButtonLoading(true);
      setSectionLoading("next", true);
      setSectionLoading("summary", true);
      setSectionLoading("table", true);
      setSectionLoading("cont", true);
      setSectionLoading("world", true);

      try {
        const resp = await fetch(`/api/holidays.json?country=${code}&year=${year}&locale=${LOCALE}`);
        const data = await resp.json();

        if (data.mode !== "live") {
          els.apiMode.textContent = "ğŸ”Œ Fuente: Nager.Date (ups)";
          if (data.error) els.apiMode.title = String(data.error);
          els.tbody.innerHTML = `<tr><td colspan="2" class="text-danger">Uyâ€¦ no pudimos traer los feriados ahora ğŸ˜•. ProbÃ¡ mÃ¡s tarde.</td></tr>`;
          els.totalHolidays.textContent = "0";
          els.passedCount.textContent = "0";
          els.remainingCount.textContent = "0";
          els.nextName.textContent = "â€”"; els.nextDate.textContent = "â€”"; els.daysLeft.textContent = "â€”";
          els.todayBadge && els.todayBadge.classList.add("d-none");
          els.rankSelfCont.innerHTML = `<li class="list-group-item text-muted">Sin datos por acÃ¡â€¦ ğŸ¤·â€â™€ï¸</li>`;
          els.rankWorld.innerHTML    = `<li class="list-group-item text-muted">Nada por aquÃ­ todavÃ­a ğŸ‘€</li>`;
          ["next","summary","table","cont","world"].forEach(k => setSectionLoading(k, false));
          return;
        }

        els.apiMode.textContent = "ğŸ”Œ Fuente: Nager.Date (en vivo)";
        els.apiMode.removeAttribute("title");

        const { holidays = [], total = 0 } = data;

        // KPIs
        const today = todayISO();
        const passed = holidays.filter(h => h.dateISO < today).length;
        // ApagÃ¡ overlays de KPIs ANTES de escribir
        setSectionLoading("summary", false);
        setSectionLoading("next", false);

        els.totalHolidays.textContent = String(total);
        els.passedCount.textContent = String(passed);
        els.remainingCount.textContent = String(Math.max(0, total - passed));

        const next = computeNext(holidays);
        if (next) {
          els.nextName.textContent = next.holiday.name;
          els.nextDate.textContent = fmtDate(next.holiday.dateISO);
          els.daysLeft.textContent = String(next.daysLeft);
          const isToday = next.daysLeft === 0;
          els.todayBadge && els.todayBadge.classList.toggle("d-none", !isToday);
          if (isToday) startCelebration(true);
          else if (next.daysLeft <= 2) startCelebration(false);
          else stopCelebration();
        } else {
          els.nextName.textContent = "â€”"; els.nextDate.textContent = "â€”"; els.daysLeft.textContent = "â€”";
          els.todayBadge && els.todayBadge.classList.add("d-none");
          stopCelebration();
        }

        // Tabla
        els.tbody.innerHTML = tableSkeleton(8); // opcional mientras calcula
        renderTable(holidays);
        setSectionLoading("table", false);

        // Rankings
        const cont = getContinent(code);
        els.selfCont.textContent = cont || "â€”";

        const worldCodes = getAllCodes();
        const pSelf = cont
          ? fetch(`/api/ranking.json?countries=${encodeURIComponent(getCountriesByContinent(cont).join(","))}&year=${year}&locale=${LOCALE}`)
              .then(r=>r.json())
              .then(j => renderRanking(els.rankSelfCont, j.results, code))
              .finally(() => setSectionLoading("cont", false))
          : (els.rankSelfCont.innerHTML = `<li class="list-group-item text-muted">No tenemos continente mapeado ğŸ™ˆ</li>`, setSectionLoading("cont", false), Promise.resolve());

        const pWorld = fetch(`/api/ranking.json?countries=${encodeURIComponent(worldCodes.join(","))}&year=${year}&locale=${LOCALE}&limit=10&include=${code}`)
          .then(r=>r.json())
          .then(j => renderWorldRanking(els.rankWorld, j.results, code, 10))
          .finally(() => setSectionLoading("world", false));

        await Promise.all([pSelf, pWorld]);

      } finally {
        setButtonLoading(false);
      }
    }

    function renderRanking(listEl, items, highlight){
      if(!items?.length){
        listEl.innerHTML = `<li class="list-group-item text-muted">Sin datos por acÃ¡â€¦ ğŸ¤·â€â™€ï¸</li>`;
        return;
      }
      const max = Math.max(1, ...items.map(i=>i.total));
      listEl.innerHTML = items.map((i, idx) => {
        const pct = Math.round((i.total/max)*100);
        const name = codeToName(i.country);
        const strong = i.country===highlight ? 'class="fw-bold text-primary"' : "";
        return `
          <li class="list-group-item">
            <div class="d-flex justify-content-between align-items-center mb-1">
              <span ${strong}>${idx+1}. ${name}</span>
              <span class="badge bg-primary-subtle text-primary-emphasis">${i.total} ğŸ‰</span>
            </div>
            <div class="progress"><div class="progress-bar" style="width:${pct}%"></div></div>
          </li>`;
      }).join("");
    }

    function renderWorldRanking(listEl, items, highlightCode, limit = 10){
      if(!items?.length){
        listEl.innerHTML = `<li class="list-group-item text-muted">Nada por aquÃ­ todavÃ­a ğŸ‘€</li>`;
        return;
      }
      const view = items.slice(0, limit);
      const max = Math.max(1, ...view.map(i=>i.total));
      listEl.innerHTML = view.map((i, idx) => {
        const pct = Math.round((i.total / max) * 100);
        const name = codeToName(i.country);
        const strongStart = i.country === highlightCode ? '<span class="fw-bold text-primary">' : '<span>';
        return `
          <li class="list-group-item">
            <div class="d-flex justify-content-between align-items-center mb-1">
              ${strongStart}${idx + 1}. ${name}</span>
              <span class="badge bg-primary-subtle text-primary-emphasis">${i.total} ğŸ‰</span>
            </div>
            <div class="progress"><div class="progress-bar" style="width:${pct}%"></div></div>
          </li>
        `;
      }).join("");
    }

    // eventos
    els.load.addEventListener("click", handleLoad);

    // boot
    await loadMeta();
    await handleLoad();
  </script>

